{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "importMap": "./import_map.json",
  "exclude": [
    "**/node_modules/**"
  ],
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "options": {
      "semiColons": false
    }
  },
  "nodec": true,
  "tsconfig": "./tsconfig.app.json"
}
